###############################
# LIST
###############################
alias ls='ls --color=auto'
alias ll='ls -l'
alias lll='ls -la'

###############################
# REMOVE
###############################
alias rm='rm -I'

###############################
# CHANGE DIRECTORY
###############################
alias cs='cd;ls'
alias cd..='cd ..' 
alias ..='cd ..' 
alias ...='cd ../../../' 
alias ....='cd ../../../../' 
alias .....='cd ../../../../' 
alias .4='cd ../../../../' 
alias .5='cd ../../../../..'

###############################
# DATE AND TIME
###############################
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

###############################
# PACKAGE MANAGEMENT
###############################
alias apt-get='sudo apt-get'
alias reboot='sudo reboot'
alias update='sudo apt-get update'
alias upgradee='sudo apt-get upgrade'

###############################
# VIM
###############################
alias vi=vim 
alias svi='sudo vi' 
alias svim='sudo vi' 
alias vis='vim "+set si"' 
alias edit='vim'

###############################
# MISC
###############################
alias t='tmux -2'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'

###############################
# LOGBOOK FUNCTION
###############################
function lb() {
	file=~/logbook/$(date '+%Y-%m-%d').md
	if [ -e "$file" ]; then
    	vim "$file"
	else 
    	echo "# $(date '+%Y-%m-%d')" > "$file"
    	vim "$file"
	fi 
}

###############################
# MARKDOWN VIEWER
###############################
function mdv () {
  pandoc $1 | lynx -stdin -vikeys
}

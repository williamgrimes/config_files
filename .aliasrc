alias ...='cd ../../../' 
alias ....='cd ../../../../' 
alias .....='cd ../../../../' 
alias .4='cd ../../../../' 
alias .5='cd ../../../../..'


###############################
# VIM
###############################
alias vi=vim 
alias svi='sudo vi' 
alias svim='sudo vi' 
alias vis='vim "+set si"' 
alias edit='vim'
alias chrome='/opt/google/chrome/chrome'

###############################
# LOGBOOK FUNCTION
###############################
function lb() {
	file=~/logbook/$(date '+%Y-%m-%d').md
	if [ -e "$file" ]; then
    	vim "$file"
	else 
    	echo "# $(date '+%Y-%m-%d')" > "$file"
    	vim "$file"
	fi 
}

###############################
# MARKDOWN VIEWER
###############################
function mdv () {
  pandoc $1 | lynx -stdin -vikeys
}


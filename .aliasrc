# ~/.aliasrc

###############################
# PROXIES
###############################
export GIO_EXTRA_MODULES=/usr/lib/x86_64-linux-gnu/gio/modules/

proxy_set() {
    gsettings set org.gnome.system.proxy mode 'manual'
    gsettings set org.gnome.system.proxy.http host 'proxy.fe.unl.pt'
    gsettings set org.gnome.system.proxy.http port 9999
    gsettings set org.gnome.system.proxy.https host 'proxy.fe.unl.pt'
    gsettings set org.gnome.system.proxy.https port 9999
    gsettings set org.gnome.system.proxy.ftp host 'proxy.fe.unl.pt'
    gsettings set org.gnome.system.proxy.ftp port 9999
}

proxy_unset() {
    gsettings set org.gnome.system.proxy mode 'none'
}

###############################
# TMUX SESSION TEMPLATES
###############################
alias tmux_gpu='bash ~/.dotfiles/.tmux/.session_gpu_monitor.sh'

###############################
# LIST
###############################
alias ls='ls --color=auto'
alias ll='ls -l'
alias lll='ls -la'

###############################
# REMOVE
###############################
alias rm='rm -I'

###############################
# CHANGE DIRECTORY
###############################
alias cs='cd;ls'
alias cd..='cd ..' 
alias ..='cd ..' 
alias ...='cd ../../../' 
alias ....='cd ../../../../' 
alias .....='cd ../../../../' 
alias .4='cd ../../../../' 
alias .5='cd ../../../../..'

###############################
# DATE AND TIME
###############################
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

###############################
# PACKAGE MANAGEMENT
###############################
alias apt-get='sudo apt-get'
alias reboot='sudo reboot'
alias update='sudo apt-get update'
alias upgradee='sudo apt-get upgrade'

###############################
# VIM
###############################
alias vi=vim 
alias svi='sudo vi' 
alias svim='sudo vi' 
alias vis='vim "+set si"' 
alias edit='vim'

###############################
# MISC
###############################
alias t='tmux -2'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'

# ~/.aliasrc
#
###############################
# GIT
###############################
alias githere='gitk --all &; git gui &'

###############################
# THEASAURUS
###############################
alias thrus='dict -d moby-thesaurus'

###############################
# SPOTIFY TIMEOUT
###############################
alias play_pause_spotify='dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause'
alias next_spotify='dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next'
alias previous_spotify='dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous'
alias stop_spotify='dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop'

###############################
# LIST
###############################
alias ls='ls --color=auto'
alias ll='ls -l'
alias lll='ls -la'

###############################
# REMOVE
###############################
alias rm='rm -I'

###############################
# CHANGE DIRECTORY
###############################
alias cs='cd;ls'

###############################
# DATE AND TIME
###############################
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

###############################
# PACKAGE MANAGEMENT
###############################
alias apt-get='sudo apt-get'
alias reboot='sudo reboot'
alias update='sudo apt-get update'
alias upgrade='sudo apt-get upgrade'

###############################
# VIM
###############################
alias vi=vim 
alias svi='sudo vi' 
alias svim='sudo vi' 
alias vis='vim "+set si"' 
alias edit='vim'

###############################
# VISIDATA
###############################
alias vdd='vd $1 --csv-delimiter="|"'

###############################
# MISC
###############################
alias t='tmux -2'
alias h='history'
alias j='jobs -l'

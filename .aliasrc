# ~/.aliasrc

###############################
# COLOUR LS OUTPUT
###############################
alias ls='ls --color=auto'

###############################
# MISC
###############################
alias t='tmux -2'
alias rm='rm -I'
alias ll='ls -l'
alias cs='cd;ls'
alias apt-get='sudo apt-get'
alias reboot='sudo reboot'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'

###############################
# UPDATE AND UPGRADE
###############################
alias update='sudo apt-get update'
alias upgradee='sudo apt-get upgrade'

###############################
# CHANGE DIRECTORY
###############################
alias cd..='cd ..' 
alias ..='cd ..' 
alias ...='cd ../../../' 
alias ....='cd ../../../../' 
alias .....='cd ../../../../' 
alias .4='cd ../../../../' 
alias .5='cd ../../../../..'


###############################
# VIM
###############################
alias vi=vim 
alias svi='sudo vi' 
alias svim='sudo vi' 
alias vis='vim "+set si"' 
alias edit='vim'
alias chrome='/opt/google/chrome/chrome'

###############################
# LOGBOOK FUNCTION
###############################
function lb() {
    vim ~/logbook/$(date '+%Y-%m-%d').md
}

